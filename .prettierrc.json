{
  "overrides": [
    {
      "files": ["*.ts", "**/*.ts"],
      "options": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "all",
        "plugins": ["@trivago/prettier-plugin-sort-imports"],
        "parser": "typescript",
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "importOrder": [
          "./utils/configureDotEnv",
          "./utils/configureOperatorEnv",
          "^viem(.*)$",
          "^[a-zA-Z](.*)$",
          "^@(.*)$",
          "^@concero/(.*)$",
          "^src/common/(.*)$",
          "^src/constants(.*)$",
          "^src/types(.*)$",
          "^../../common/(.*)$",
          "^../(.*)$",
          "^./(.*)$",
          "^[./]"
        ]
      }
    }
  ]
}
